@model Shelfie.Presentation.Models.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registreren</title>

    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container" style="padding-top:20px;">
        <h2>Use case 1 â€” Registreren</h2>

        <div class="row">
            <div class="col-md-4">

                <form action="/Account/Register" method="post">

                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Gebruikersnaam"></label>
                        <input asp-for="Gebruikersnaam" class="form-control" />
                        <span asp-validation-for="Gebruikersnaam" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Wachtwoord"></label>
                        <input asp-for="Wachtwoord" type="password" class="form-control" />
                        <span asp-validation-for="Wachtwoord" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmWachtwoord"></label>
                        <input asp-for="ConfirmWachtwoord" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmWachtwoord" class="text-danger"></span>
                    </div>

                    <br />
                    <button type="submit" class="btn btn-primary">Registreer</button>
                    <a href="/Account/Login" class="btn btn-link">Al een account? Inloggen</a>

                </form>

            </div>
        </div>
    </div>

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
