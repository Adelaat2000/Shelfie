@model Shelfie.Presentation.Models.EditProfileViewModel

@{
    ViewData["Title"] = "Profiel Bewerken";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="EditProfile" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="GebruikerID" type="hidden" />

            <div class="form-group">
                <label asp-for="PersoonlijkeInfo">Mijn Bio</label>
                <textarea asp-for="PersoonlijkeInfo" class="form-control" rows="5"></textarea>
                <span asp-validation-for="PersoonlijkeInfo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Huidig Icoon</label><br/>
                <img src="@Model.HuidigeIcoonURL" alt="Huidig Icoon" style="width: 100px; height: 100px; object-fit: cover; border-radius: 50%;" />
            </div>

            <div class="form-group">
                <label asp-for="IcoonUpload">Upload Nieuw Icoon</label>
                <input asp-for="IcoonUpload" type="file" class="form-control" />
                <span asp-validation-for="IcoonUpload" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Huidige Banner</label><br/>
                <img src="@Model.HuidigeBannerURL" alt="Huidige Banner" style="width: 100%; height: 150px; object-fit: cover;" />
            </div>

            <div class="form-group">
                <label asp-for="BannerUpload">Upload Nieuwe Banner</label>
                <input asp-for="BannerUpload" type="file" class="form-control" />
                <span asp-validation-for="BannerUpload" class="text-danger"></span>
            </div>

            <br/>
            <button type="submit" class="btn btn-primary">Opslaan</button>
        </form>
    </div>
</div>