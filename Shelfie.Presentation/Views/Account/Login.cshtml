@model Shelfie.Presentation.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inloggen</title>

    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
<div class="container" style="padding-top:20px;">
        <h2>Use case 2 â€” Inloggen</h2>

    <div class="row">
        <div class="col-md-4">

            <form action="/Account/Login" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="GebruikersNaam"></label>
                    <input asp-for="GebruikersNaam" class="form-control" />
                    <span asp-validation-for="GebruikersNaam" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Wachtwoord"></label>
                    <input asp-for="Wachtwoord" type="password" class="form-control" />
                    <span asp-validation-for="Wachtwoord" class="text-danger"></span>
                </div>

                <br />
                <button type="submit" class="btn btn-primary">Inloggen</button>

                <a href="/Account/Register" class="btn btn-link">Nog geen account? Registreren</a>
            </form>

        </div>
    </div>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>