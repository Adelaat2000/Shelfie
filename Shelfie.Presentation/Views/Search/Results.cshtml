@model Shelfie.Presentation.Models.SearchViewModel

@{
    ViewData["Title"] = "Zoekresultaten";
}

<h2>Use case 4 â€” @ViewData["Title"]</h2>

    <h4>U zocht op: "@Model.SearchTerm" (Type: @Model.SearchType)</h4>
    <hr />

@if (Model.Resultaten.Count == 0)
{
        <p>Geen boeken gevonden die voldoen aan uw zoekopdracht.</p>
}
else
{
        <table class="table">
        <thead>
        <tr>
        <th>Titel</th>
        <th>ISBN</th>
        <th>Auteur(s)</th>
        </tr>
        </thead>
        <tbody>
    @foreach (var boek in Model.Resultaten)
    {
        <tr>
            <td>@boek.Titel</td>
            <td>@boek.ISBN</td>
            <td>@(string.IsNullOrWhiteSpace(boek.AuteurNaam) ? "-" : boek.AuteurNaam)</td>
            </tr>
    }
    </tbody>
        </table>
}